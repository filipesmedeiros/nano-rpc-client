{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2020",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist/types",
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist"]
}
