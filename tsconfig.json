  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "outDir": "./dist/types",
    "emitDeclarationOnly": true
  },
  "exclude": ["node_modules", "dist"]
}
